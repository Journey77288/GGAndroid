<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/dp_15</item>
    </style>

    <style name="NavigationStyle">
        <item name="android:drawablePadding">@dimen/dp_6</item>
        <item name="android:drawableTop">@drawable/ic_launcher</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/dp_16</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
    </style>
</resources>
