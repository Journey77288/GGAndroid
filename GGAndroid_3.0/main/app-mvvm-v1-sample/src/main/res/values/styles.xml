<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Activity.Me">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleTextAppearance" parent="AppTheme">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


    <style name="EditTextTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="counterText">
        <item name="android:textColor">@color/black_translucent</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="errorText">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="hintStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_11</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
